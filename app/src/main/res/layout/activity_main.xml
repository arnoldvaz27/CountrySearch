<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/holo_red"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="15dp"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:includeFontPadding="false"
            android:text="@string/app_name"
            android:fontFamily="@font/regular"
            android:textColor="@color/white"
            android:textSize="22sp" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="12sp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/important_note"
                android:layout_marginStart="5dp"
                android:textStyle="bold" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:scrollbars="none">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <LinearLayout
               android:id="@+id/SearchByCountry"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="13dp"
               android:layout_marginTop="15dp"
               android:orientation="horizontal"
               android:padding="8dp">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/country"
                   android:layout_marginStart="3dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Search by Country"
                   android:textSize="15sp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="12dp"
                   android:textColor="@color/white" />
           </LinearLayout>


           <LinearLayout
               android:id="@+id/SearchByCapital"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="13dp"
               android:layout_marginTop="15dp"
               android:orientation="horizontal"
               android:padding="8dp">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/capital"
                   android:layout_marginStart="3dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Search by Capital"
                   android:textSize="15sp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="12dp"
                   android:textColor="@color/white" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/SearchByCurrency"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="13dp"
               android:layout_marginTop="15dp"
               android:orientation="horizontal"
               android:padding="8dp">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/currency"
                   android:layout_marginStart="3dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Search by Currency Code"
                   android:textSize="15sp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="12dp"
                   android:textColor="@color/white" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/SearchByLanguage"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="13dp"
               android:layout_marginTop="15dp"
               android:orientation="horizontal"
               android:padding="8dp">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/languages"
                   android:layout_marginStart="3dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Search by Language Code"
                   android:textSize="15sp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="12dp"
                   android:textColor="@color/white" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/SearchByCallingCode"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="13dp"
               android:layout_marginTop="15dp"
               android:orientation="horizontal"
               android:padding="8dp">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/calling"
                   android:layout_marginStart="3dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Search by Calling Code"
                   android:textSize="15sp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="12dp"
                   android:textColor="@color/white" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/SearchByInitialLetter"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="13dp"
               android:layout_marginTop="15dp"
               android:orientation="horizontal"
               android:padding="8dp">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/initialname"
                   android:layout_marginStart="3dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Search by Countries Initial letters"
                   android:textSize="15sp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="12dp"
                   android:textColor="@color/white" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/SearchByRegion"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="13dp"
               android:layout_marginTop="15dp"
               android:orientation="horizontal"
               android:padding="8dp">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/region"
                   android:layout_marginStart="3dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Search by Region (Continent)"
                   android:textSize="15sp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="12dp"
                   android:textColor="@color/white" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/SearchByOrganizations"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="13dp"
               android:layout_marginTop="15dp"
               android:orientation="horizontal"
               android:padding="8dp">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/organizations"
                   android:layout_marginStart="3dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Search by Organizations"
                   android:textSize="15sp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="12dp"
                   android:textColor="@color/white" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/WorldWeb"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="13dp"
               android:layout_marginTop="15dp"
               android:orientation="horizontal"
               android:padding="8dp">

               <ImageView
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/worldweb"
                   android:layout_marginStart="3dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="World Web"
                   android:textSize="15sp"
                   android:layout_marginTop="10dp"
                   android:layout_marginStart="12dp"
                   android:textColor="@color/white" />
           </LinearLayout>
       </LinearLayout>
   </ScrollView>


</LinearLayout>